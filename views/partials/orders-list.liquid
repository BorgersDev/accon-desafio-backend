{% for order in orders %}
<li class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm">
  <p><strong>Customer:</strong> {{ order.customer }}</p>
  <p><strong>Data:</strong> {{ order.createdAt | default: order.date | date: "%d/%m/%Y" }}</p>
  <p><strong>Hora:</strong> {{ order.createdAt | default: order.date | date: "%H:%M:%S" }}</p>
  <ul>
    {% for item in order.items %}
    <li><strong>Item: </strong>{{ item.name }} - Quantity: {{ item.quantity }}</li>
    {% endfor %}
  </ul>
  <p><strong>Total:</strong> {{ order.total }} {{ order.total.orderAmount.currency }}</p>
</li>
{% endfor %}